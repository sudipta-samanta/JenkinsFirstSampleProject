pipeline {
  agent none
  stages {
    stage('Build') {
      parallel {
        stage('build in OS-1') {
          agent any
          steps {
            echo 'building in OS 1'
          }
        }
        stage('build in OS-2') {
          agent any
          steps {
            echo 'building in OS 2'
          }
        }
        stage('build in OS-3') {
          agent any
          steps {
            echo 'building in OS 3'
          }
        }
      }
    }

    stage('Test') {
      parallel {
        stage('test in OS-1') {
          agent any
          steps {
            echo 'test in OS 1'
          }
        }
        stage('test in OS-2') {
          agent any
          steps {
            echo 'test in OS 2'
          }
        }
      }
    }
  }
  post {
    always {
      echo 'Always Running...'
    }
  }
}
